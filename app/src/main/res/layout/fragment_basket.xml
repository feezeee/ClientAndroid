<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_for_basket"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-40dp"
        app:layout_constraintBottom_toTopOf="@id/rv_basket_items"/>
    <RelativeLayout
        android:id="@+id/rl_basket_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_basket_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_baseline_close_24"
            android:visibility="invisible"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:text="Корзина"
            android:textColor="#367385"
            android:textSize="10pt"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_clear_basket"
            android:backgroundTint="#367385"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_baseline_delete_24"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_basket_full_price"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rl_basket_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp">
        <TextView
            android:id="@+id/tv_basket_full_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="0.00"
            android:textStyle="bold"
            android:textSize="14pt"
            android:textColor="#204F51"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" р."
            android:textStyle="bold"
            android:textSize="14pt"
            android:textColor="#204F51"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:paddingHorizontal="10dp"
        android:background="@drawable/rounded_recycler_view"
        android:id="@+id/rv_basket_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_basket_full_price"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="51dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/fab_basket_complete_basket"
        android:backgroundTint="#367385"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tooltipText="Оформить заказ">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</androidx.constraintlayout.widget.ConstraintLayout>