<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_basket_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_close_24"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#80000000" />

    <TextView
        android:id="@+id/tv_basket_static_text_before_deleting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:textSize="10pt"
        android:textAlignment="center"
        android:text="Вы уверены, что хотите удалить товар из корзины?"/>

    <Button
        android:id="@+id/btn_basket_remove_no"

        app:layout_constraintTop_toBottomOf="@id/tv_basket_static_text_before_deleting"
        app:layout_constraintStart_toStartOf="@id/tv_basket_static_text_before_deleting"
        app:layout_constraintEnd_toStartOf="@id/btn_basket_remove_yes"

        android:backgroundTint="#BBB11C2B"

        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет"/>
    <Button
        android:id="@+id/btn_basket_remove_yes"

        app:layout_constraintTop_toBottomOf="@id/tv_basket_static_text_before_deleting"
        app:layout_constraintEnd_toEndOf="@id/tv_basket_static_text_before_deleting"
        app:layout_constraintStart_toEndOf="@id/btn_basket_remove_no"

        android:backgroundTint="#BB1CB12B"

        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Да"/>
</androidx.constraintlayout.widget.ConstraintLayout>