<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_shape"
    android:paddingBottom="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/v_basket_sheet_dialog_top_line"
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#5A5A5A">

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_basket_static_text_before_deleting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:text="Вы уверены, что хотите удалить товар из корзины?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_basket_remove_no"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        android:backgroundTint="#BBB11C2B"
        android:text="Нет"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btn_basket_remove_yes"
        app:layout_constraintStart_toStartOf="@id/tv_basket_static_text_before_deleting"
        app:layout_constraintTop_toBottomOf="@id/tv_basket_static_text_before_deleting" />

    <Button
        android:id="@+id/btn_basket_remove_yes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"

        android:backgroundTint="#BB1CB12B"

        android:text="Да"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tv_basket_static_text_before_deleting"
        app:layout_constraintStart_toEndOf="@id/btn_basket_remove_no"
        app:layout_constraintTop_toBottomOf="@id/tv_basket_static_text_before_deleting" />
</androidx.constraintlayout.widget.ConstraintLayout>