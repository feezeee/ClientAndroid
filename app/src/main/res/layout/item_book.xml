<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@color/purple_200"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv_MainImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_MainImage"
            app:layout_constraintStart_toStartOf="@+id/iv_MainImage"
            app:layout_constraintEnd_toEndOf="@+id/iv_MainImage"
            app:layout_constraintBottom_toBottomOf="@+id/iv_MainImage"
            android:id="@+id/tv_Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Test text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_MainImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Количество: "
            android:id="@+id/tv_CountStatic"/>
        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_MainImage"
            app:layout_constraintStart_toEndOf="@+id/tv_CountStatic"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="10000000000000000000000000000"
            android:id="@+id/tv_Count"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_Count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:background="#757575"
            android:id="@+id/v_UnderTvCount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/v_UnderTvCount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Цена: "
            android:id="@+id/tv_PriceStatic"/>
        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/v_UnderTvCount"
            app:layout_constraintStart_toEndOf="@+id/tv_PriceStatic"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="10000000000000000000000000000"
            android:id="@+id/tv_Price"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:text="Купить"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_PriceStatic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>