<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kursachclient.presentation.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_bookDescriptionFragment"
            app:destination="@id/bookDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.kursachclient.presentation.SettingFragment"
        android:label="SettingFragment" />
    <fragment
        android:id="@+id/bookDescriptionFragment"
        android:name="com.example.kursachclient.presentation.home.BookDescriptionFragment"
        android:label="BookDescriptionFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.kursachclient.presentation.home.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.kursachclient.presentation.home.RegistrationFragment"
        android:label="RegistrationFragment" />
</navigation>